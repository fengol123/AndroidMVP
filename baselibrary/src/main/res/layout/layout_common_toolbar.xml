<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/common_toolbar_bg_color"
                android:minHeight="?attr/actionBarSize"
                android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_toolbar_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:scaleType="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_toolbar_back_button_secord"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:scaleType="center"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_toolbar_menu_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="左标题"
            android:textColor="@color/common_title_color"
            android:textSize="@dimen/common_title_size_16"
            android:visibility="gone"/>
    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/common_title_color"
        android:textSize="@dimen/common_title_size_18"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/img_toolbar_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:scaleType="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_toolbar_menu_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="右标题"
            android:textColor="@color/common_title_color"
            android:textSize="@dimen/common_title_size_16"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>

